/* Test 93, getchar, gc, gn, gs

main [
	char buf(80)
	char y
	int n

	pl "getchar test; enter one character, then <enter> :"
	y = getchar
    ps("getchar: ");putchar y

	pl "gc test; enter one character, then <enter> :"
	y = gc
	pl("gc: ");putchar y
	
	pl "gs test; enter a string, then <enter> :"
	gs buf
    ps "-->"
    ps buf
    ps "<--"

	pl "gn test; enter a number, then <enter> :"
	n = gn
	ps("gn: ");pn n
]

